include projects/common.mk

TARGET = ./build-web/scripts/IPlugEffect.js

SRC = $(WEB_SRC) IPlugEffect.cpp

EXPORTS = "['_main']"

CFLAGS = \
-I$(PROJECT_ROOT) \
-I$(WAM_SDK_PATH) \
-I$(WDL_PATH) \
-I$(IPLUG_PATH) \
-I$(IPLUG_EXTRAS_PATH) \
-I$(IPLUG_WEB_PATH) \
-I$(IGRAPHICS_PATH) \
-I$(IGRAPHICS_CONTROLS_PATH) \
-DWEB_API \
-DSAMPLE_TYPE_FLOAT \
-DIGRAPHICS_WEB \
-DNO_PARAMS_MUTEX \
-std=c++11 \
-Wno-bitwise-op-parentheses

LDFLAGS = \
-s EXPORTED_FUNCTIONS=$(EXPORTS) \
-O2

JSFLAGS = -s BINARYEN_ASYNC_COMPILATION=1 \
-s ALLOW_MEMORY_GROWTH=1 \
-s WASM=1 \
-s ASSERTIONS=0 \
--bind 
#--preload-file ./resources/img@/

$(TARGET): $(OBJECTS)
	$(CC) $(CFLAGS) $(LDFLAGS) $(JSFLAGS) -o $@ $(SRC)
